{
  "name": "@laserware/arcade",
  "version": "1.0.1",
  "description": "Miscellaneous utility functions.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "url": "https://github.com/laserware/arcade.git",
    "type": "git"
  },
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "keywords": [
    "utilities"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.build.json && pnpm format:build",
    "prepublishOnly": "npm run build",
    "preversion": "pnpm lint && pnpm typecheck",
    "version": "pnpm format && git add -A src",
    "postversion": "git push && git push --tags",
    "format": "prettier --write \"src/**/**.ts\"",
    "format:build": "prettier --write \"src/**/**.{js,ts}\"",
    "lint": "eslint --cache src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/lodash.groupby": "^4.6.7",
    "@types/lodash.isequal": "^4.5.6",
    "lodash.groupby": "^4.6.0",
    "lodash.isequal": "^4.5.0"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^1.0.0",
    "@rushstack/eslint-patch": "^1.3.2",
    "@types/node": "^20.3.3",
    "eslint": "^8.44.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6"
  },
  "prettier": {
    "trailingComma": "all"
  }
}
